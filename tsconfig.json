{
  "extends": "./node_modules/@rashedmakkouk/eslint-config/lib/bases/tsconfig.base.json",
  "display": "Node Package",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "allowJs": true,
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "scripts"
  ],
  "include": [
    "src/**/*"
  ]
}