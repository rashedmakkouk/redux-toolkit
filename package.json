{
  "name": "@limo/redux-toolkit",
  "version": "0.5.1",
  "description": "Opinionated helper functions for consistent Redux experience.",
  "displayName": "@limo/redux-toolkit",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">= 12.16.1",
    "yarn": ">=1.4.0"
  },
  "keywords": [
    "Redux",
    "utils",
    "toolkit",
    "toolbox",
    "storage"
  ],
  "repository": {
    "type": "git",
    "url": "git@192.168.1.200:org/redux-toolkit"
  },
  "scripts": {
    "empty-package": "rm -rf c:/npm/@limo/redux-toolkit/*",
    "copy-package-metadata": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} c:/npm/@limo/redux-toolkit",
    "publish-local": "yarn copy-package-metadata && mkdir c:\\npm\\@limo\\redux-toolkit\\lib && cp -r ./build/* c:/npm/@limo/redux-toolkit/lib",
    "empty-build": "rm -rf ./build/*",
    "copy-build-files": "cp -r ./src/*.d.ts ./build",
    "compile": "yarn empty-build && tsc --build && yarn copy-build-files",
    "build": "yarn compile && yarn empty-package && yarn publish-local",
    "uP": "yarn upgrade @limo/utils @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/redux-toolkit/",
    "tsc": "tsc"
  },
  "dependencies": {
    "@limo/utils": "file:../../../../npm/@limo/utils",
    "lodash": "^4.17.20",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../npm/@limo/eslint-config",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "prettier": "^2.1.2",
    "typedoc": "^0.20.9",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "@limo/utils": "c:/npm/@limo/utils",
    "lodash": "^4.17.20",
    "redux": "^4.0.5"
  }
}
