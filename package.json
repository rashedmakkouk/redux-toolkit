{
  "name": "@limo/redux-toolkit",
  "version": "1.04.13",
  "description": "Universal & useful Redux helper functions.",
  "author": "Rashed Makkouk",
  "displayName": "@limo/redux-toolkit",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "tsc-w": "tsc --watch",
    "build-delete": "rm -rf ./dist/*",
    "copy-meta": "cp -r ./{package.json,yarn.lock,CHANGELOG.md,README.md,LICENSE} ./dist/",
    "publish-npm": "rm -rf c:/npm/@limo/redux-toolkit/* && cp -r ./dist/* c:/npm/@limo/redux-toolkit/",
    "build": "yarn build-delete && tsc --skipLibCheck && yarn copy-meta && yarn publish-npm",
    "uP": "yarn upgrade @limo/utils @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/redux-toolkit/"
  },
  "keywords": [
    "redux",
    "utils",
    "@limo"
  ],
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../../npm/@limo/eslint-config",
    "@limo/utils": "file:../../../../../npm/@limo/utils",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "lodash": "^4.17.20",
    "prettier": "^2.1.1",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "@limo/utils": "c:/npm/@limo/utils"
  }
}
