{
  "name": "@limo/redux-toolkit",
  "version": "0.5.0",
  "description": "Opinionated helper functions for consistent Redux experience.",
  "displayName": "@limo/redux-toolkit",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "empty-build": "rm -rf c:/npm/@limo/redux-toolkit/*",
    "build-metadata": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} c:/npm/@limo/redux-toolkit",
    "build-package": "cp -r ./dist c:/npm/@limo/redux-toolkit",
    "empty-dist": "rm -rf ./dist/*",
    "dist-files": "echo dist-files",
    "compile": "tsc --build",
    "build": "npm run empty-dist && npm run compile && npm run dist-files && npm run empty-build && npm run build-metadata && npm run build-package",
    "uP": "yarn upgrade @limo/utils @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/redux-toolkit/",
    "tsc": "tsc"
  },
  "keywords": [
    "Redux",
    "utils",
    "toolkit",
    "toolbox",
    "storage"
  ],
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../npm/@limo/eslint-config",
    "@limo/utils": "file:../../../../npm/@limo/utils",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "lodash": "^4.17.20",
    "prettier": "^2.1.2",
    "redux": "^4.0.5",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "@limo/utils": "c:/npm/@limo/utils",
    "lodash": "^4.17.20",
    "redux": "^4.0.5"
  }
}
